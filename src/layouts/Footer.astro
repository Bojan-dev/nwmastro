---
import '../components/global/GlobalStyles.astro';
import logo from '/logo.svg';
import footerMap from '../imgs/global/footer-map.png';
import footerTruck from '../imgs/global/footer-truck.svg';
import { Icon } from 'astro-icon';
---

<footer class="mt-24 text-base">
  <div
    class="my-container mx-auto flex flex-col items-center gap-16 mb-8 lg:mb-24 sm:grid sm:grid-cols-4 lg:grid-cols-3"
  >
    <div
      class="flex flex-col items-center gap-3 sm:col-span-2 lg:col-auto lg:items-start lg:mx-auto home-section-heading motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500"
      data-section="footer"
      data-animation="translateX opacity"
    >
      <a href="#">
        <img
          src={logo}
          alt="No Worries Moving logo"
          loading="lazy"
          class="mb-5 w-28 lg:mb-3 lg:w-24"
          width="96"
          height="60"
        />
      </a>
      <p>100 Forest Place #P37,</p>
      <p>Oak Park, IL 60301,</p>
      <p>(844) 955 6683,</p>
      <p>mgak@noworriesmoving.com</p>
      <div class="flex gap-4 mt-2">
        <a
          href="https://www.facebook.com/noworriesmoving.us "
          rel="noopener"
          target="_blank"
          aria-label="Facebook"
          class="bg-clr-green text-white px-5 py-2 grid place-content-center hover:bg-clr-green--dark"
        >
          <Icon name="grommet-icons:facebook-option" class="w-6" />
        </a>
        <a
          href="https://www.instagram.com/noworriesmoving/"
          rel="noopener"
          target="_blank"
          aria-label="Instagram"
          class="bg-clr-green text-white px-5 py-2 grid place-content-center hover:bg-clr-green--dark"
        >
          <Icon name="mdi:instagram" class="w-6" />
        </a>
        <a
          href="https://www.linkedin.com/company/noworriesmoving/"
          rel="noopener"
          target="_blank"
          aria-label="Linkedin"
          class="bg-clr-green text-white px-5 py-2 hover:bg-clr-green--dark"
        >
          <Icon name="grommet-icons:linkedin-option" class="w-6" />
        </a>
      </div>
    </div>
    <div
      class="flex flex-col items-center gap-3 sm:col-span-2 lg:col-auto lg:items-start lg:mx-auto lg:mb-auto lg:pt-8 motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500"
      data-animation="translateX opacity"
    >
      <p class="text-clr-green text-h3 font-semibold mb-3">GO TO</p>
      <a
        href="services"
        class="border-b-2 border-transparent hover:border-clr-green">Services</a
      >
      <a
        href="pricing"
        class="border-b-2 border-transparent hover:border-clr-green">Pricing</a
      >
      <a
        href="free-boxes"
        class="border-b-2 border-transparent hover:border-clr-green"
        >Free Boxes</a
      >
      <a
        href="reviews"
        class="border-b-2 border-transparent hover:border-clr-green">Reviews</a
      >
      <a
        href="contact"
        class="border-b-2 border-transparent hover:border-clr-green">Contact</a
      >
    </div>
    <div
      class="flex flex-col items-center sm:col-span-2 sm:col-start-2 lg:mx-auto lg:col-auto lg:items-start lg:mb-auto lg:pt-8 motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500"
      data-animation="translateX opacity"
    >
      <p class="text-clr-green text-h3 font-semibold mb-3">
        NO.1 IN CHICAGOLAND!
      </p>
      <img
        src={footerMap}
        alt="Map of the USA with the flag pointing to Chicago"
        loading="lazy"
        class="w-4/6 sm:w-full md:w-3/4"
        width="280"
        height="180"
      />
    </div>
  </div>
  <div
    class="relative bg-[url('/footer-btm.svg')] bg-cover bg-bottom text-center text-white grid place-items-end h-56 mx-auto min-[2000px]:bg-[url('/footer-btm-extra.svg')]"
  >
    <div class="mb-8 flex flex-col items-center w-full my-container mx-auto">
      <div class="flex gap-4">
        <img
          src={footerTruck}
          alt="Moving van in motion"
          class="w-16 opacity-40 motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500 motion-safe:delay-100"
          data-animation="translateX opacity"
          width="65"
          height="21"
        />
        <img
          src={footerTruck}
          alt="Moving van in motion"
          class="w-16 opacity-70 motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500 motion-safe:delay-300"
          data-animation="translateX opacity"
          width="65"
          height="21"
        />
        <img
          src={footerTruck}
          alt="Moving van in motion motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500"
          class="w-16 motion-safe:opacity-0 motion-safe:-translate-x-1/2 motion-safe:duration-500 motion-safe:delay-500"
          data-animation="translateX opacity"
          width="65"
          height="21"
        />
      </div>
      <div class="bg-white h-px rounded-lg w-full mb-4"></div>
      <p>@2020 NoWorriesMoving. All rights reserved!</p>
    </div>
  </div>
</footer>
