---
import './GlobalStyles.astro';

type SectionProps = {
  title: string;
  titleId: string;
  titleDes: string;
  isContainer: boolean;
  extraClasses?: string;
  dataAtt: string;
  sectionClass: string;
};

const {
  title,
  titleId,
  titleDes,
  isContainer = true,
  extraClasses = '',
  dataAtt = '',
  sectionClass = '',
} = Astro.props as SectionProps;

const isContainerClass = isContainer ? 'my-container' : '';
---

<section
  aria-labelledby={titleId}
  class={`${isContainerClass} text-base my-20 mx-auto ${extraClasses}`}
>
  <div class="flex flex-col items-center text-center gap-3 mb-12 lg:mb-14">
    <h2
      id={titleId}
      class={`text-h2_md md:text-xxl font-black home-section-heading`}
      data-section={dataAtt}
    >
      {title}
    </h2>
    <p>{titleDes}</p>
    <div class="w-10 h-0.5 bg-clr-green rounded"></div>
  </div>
  <slot />
</section>
